---
import "@fontsource-variable/plus-jakarta-sans";
import "@fontsource-variable/fraunces";

import { ViewTransitions } from "astro:transitions";

import Nav from "@/components/Nav.astro";
import Footer from "@/components/Footer.astro";
import VideoBackground from "@/components/VideoBackground.astro";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, minimum-scale=1.0, viewport-fit=cover"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="manifest" href="/manifest.json" crossorigin="use-credentials" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-title"
      content="La Mediterrania Jardineria"
    />
    <link rel="apple-touch-icon" type="image/png" href="/mobile.png" />
    <title>{title}</title>
    <ViewTransitions />
    <meta name="author" content="verdu | verdu@live.com" />
    <meta name="robots" content="index, follow" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta
      property="og:url"
      content="https://www.lamediterraniajardineria.com"
    />
    <meta property="og:image" content="/card.jpg" />
    <meta property="og:description" content={description} />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:site" content="@lamediterraniajardineria" />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/card.jpg" />
    <meta name="twitter:image:alt" content={title} />
  </head>
  <body class="bg-smoke-50 text-smoke-950">
    <VideoBackground />

    <div class="flex min-h-screen flex-col overflow-hidden">
      <Nav />
      <slot />
      <Footer />
    </div>

    <style is:global>
      p {
        @apply text-pretty;
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        @apply text-balance;
      }
    </style>
  </body>
</html>
