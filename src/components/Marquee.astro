---
const { items } = Astro.props;
const seconds = "60s";
const gap = "1rem";
---

<main class="flex w-full">
  <ul class="flex shrink-0">
    {
      items.map(({ alt, src }: { src: string; alt: string }) => (
        <li>
          <picture>
            <img
              src={src}
              alt={alt}
              class="w-48 rounded-2xl shadow-2xl shadow-black/40 lg:w-96"
            />
          </picture>

          <h3 class="sr-only">{alt}</h3>
        </li>
      ))
    }
  </ul>

  <ul class="flex shrink-0">
    {
      items.map(({ alt, src }: { src: string; alt: string }) => (
        <li>
          <picture>
            <img
              src={src}
              alt={alt}
              class="w-48 rounded-2xl shadow-2xl shadow-black/40 lg:w-96"
            />
          </picture>

          <h3 class="sr-only">{alt}</h3>
        </li>
      ))
    }
  </ul>
</main>

<style define:vars={{ seconds, gap }}>
  main {
    gap: var(--gap);
  }

  ul {
    animation: marquee var(--seconds) linear infinite;
    gap: var(--gap);
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-100% - var(--gap)));
    }
  }
</style>
